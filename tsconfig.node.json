{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023", "DOM"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"skipLibCheck": true,
		"strict": true,
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["src", "vite.config.ts"]
}
